{
  "manifest_version": 3,
  "name": "EduBoost",
  "version": "1.0",
  "description": "Quick access to study resources, auto-fill forms, and ERP login.",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
